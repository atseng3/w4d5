<% action_url = (action == :new) ? cat_rental_requests_url : cat_rental_request_url(@request) %>

<form action="<%= action_url %>" method="post">
	<% if action == :edit %>
		<input type="hidden" name="_method" value="put">
	<% end %>

	<label for="cat">Cat: </label>
	<select name="cat" id="cat">
		<% Cat.all.each do |cat| %>
			<option value="<%= cat.id %>"><%= cat.name %></option>
		<% end %>
	</select>
	<br>

  <label for="request_start_date">Start Date: </label>
	<input type="date" name="request[start_date]" id="request_start_date" value="<%= @request.start_date %>"><br>

  <label for="request_end_date">End Date: </label>
	<input type="date" name="request[end_date]" id="request_end_date" value="<%= @request.end_date %>"><br>

	<input type="submit" value="Request Cat!">
</form>